acl "trusted" {
	192.168.1.118; # ns1
	192.168.1.112; # ns2
	192.168.1.1;   # router
};

options {
	directory "/var/cache/bind";

        recursion yes;                  # enables resursive queries
	allow-recursion {192.168.1.0/24;}; #allow recursion from local network
        listen-on { 192.168.1.118; };   # ns1 private IP address - listen on private network only
        allow-transfer { 192.168.1.112; };       # disable zone transfers by default

        forwarders {
                8.8.8.8;
                8.8.4.4;
        };

	dnssec-validation auto;

	auth-nxdomain no;    # conform to RFC1035
	listen-on-v6 { any; };
};
